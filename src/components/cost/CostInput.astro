---
const { id, active } = Astro.props;
---

<div class="flex flex-col justify-center w-48">
  <input
    type="text"
    id={id}
    class={`text-2xl text-center font-black py-3 rounded-32 ${active ? "text-blue bg-pink-bg" : "text-black"}`}
    maxlength="9"
  />
  <label for={id} class="pt-3 text-xs text-center text-grey-light font-bold">
    <slot />
  </label>
</div>
